<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EventLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3pt"
    android:layout_marginRight="3pt"
    android:background="#DAD6D6"
    android:orientation="vertical"


    >

    <ImageView
        android:id="@+id/IVEvent"
        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_gravity="left"
        android:layout_marginTop="1pt"
        android:layout_weight="1"
        tools:srcCompat="@drawable/event4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2pt"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="9pt"
                android:layout_marginTop="4pt"
                android:layout_weight="1"
                android:text="HipHop"
                android:textColor="#000000"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="#DAD6D6"
                app:srcCompat="@android:drawable/btn_star" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9pt"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TVType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7pt"
                android:layout_weight="1"
                android:text="DJ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TVDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11pt"
                android:layout_weight="1"
                android:text="19/9/2021"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TVPeaopleCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11pt"
                android:layout_weight="1"
                android:text="100 Left"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TVMoreDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11pt"
                android:layout_weight="1"
                android:text="More Details ..."
                android:textColor="#11D319"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5pt"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="vertical"></LinearLayout>

</LinearLayout>