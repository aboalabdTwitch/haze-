<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user_page.SettingPage">

    <LinearLayout
        android:id="@+id/ChangePassContiner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7pt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="49dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/reset_password" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Change Password"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DeleteUserContener"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7pt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="49dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/delete_user" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="Delete this user" />
    </LinearLayout>
</LinearLayout>